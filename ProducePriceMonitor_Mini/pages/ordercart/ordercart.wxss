/* pages/ordercart.wxss */
.content{
  font-family: "Microsoft YaHei";
  height: 600px;
  background-color: #F9F9F8;
}
.info{
  background-color: #ffffff;
}
.line{
  border:1px solid #cccccc;
  opacity: 0.2;
}
.receive{
  padding:10px;
}
.item{
  display: flex;
  flex-direction: row;
  padding:10px;
  align-items: center;
}
.order{
  width:100%;
  height:87px;
}
.title{
  font-size: 15px;
}
.desc view{
  margin-right: 10px;
}
.priceInfo{
  display: flex;
  flex-direction: row;
  margin-top:10px;
}
.price{
  width:65%;
  font-size: 15px;
  color: #ff0000;
  text-align: left;
}
.count{
  border-top:1px solid #cccccc;
  border-bottom:1px solid #cccccc;
  width:40px;
  text-align: center;
}
.totalInof{
  display: flex;
  flex-direction: row;
  height: 60px;
}
.all{
  align-items: center;
  padding-left: 10px;
  width:10%;
  font-size: 12px;
  margin-top: 10px;
}
.delete{
  width:10%;
  font-size: 12px;
  margin-top: 10px;
  padding-left: 5px;
}
.amount{
  align-items: right;
  font-size: 13px;
  text-align: right;
  
}
.total{
  font-size: 16px;
  color: #ff0000;
  font-weight: bold;
  margin-bottom: 10px;
  margin-right: 5px;
}
.monitorprice{
  
  font-size: 16px;
  color: #ff0000;
  font-weight: bold;
  margin-bottom: 10px;
  margin-right: 5px;
}
.opr{
  position: absolute;
  right: 0px;
  width:92px;
  background-color: #E4393C;
  font-size: 15px;
  font-weight: bold;
  height: 60px;
  line-height: 60px;
  text-align: center;
  color: #ffffff;
}